{
"compilerOptions": {
  "module": "commonjs",
  "target": "es2016",
  "moduleResolution": "Node",
  "noImplicitAny": true,
  "removeComments": true,
  "preserveConstEnums": true,
  "sourceMap": true,
  "esModuleInterop": true,
  "declaration": true,
  "emitDeclarationOnly": true,
  "isolatedModules": true
},
"include": ["src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts"]
}